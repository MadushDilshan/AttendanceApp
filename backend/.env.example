# Server
NODE_ENV=development
PORT=3000
TZ=UTC

# MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/attendancedb

# JWT Secrets — generate with: openssl rand -hex 64
JWT_SECRET=replace_with_64_byte_hex_secret
JWT_REFRESH_SECRET=replace_with_another_64_byte_hex_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS — React dashboard origin
FRONTEND_URL=http://localhost:5173

# Email (Brevo SMTP for password reset)
BREVO_API_KEY=replace_with_brevo_api_key
EMAIL_FROM=noreply@yourcompany.com
